<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/pexels-kai-pilger-996329.jpg"/>
        </Grid.Background>
        <Button 
            Content="manager"
            Name ="ManagerButton"
            HorizontalAlignment="Left"
            Margin="10,274,0,30" Width="203"
            Click="Manager_Button_Click" FontSize="36">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF4C93B3"/>
                    <GradientStop Color="#FF8A63B6" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button 
            Content="add order"
            Name ="AddOrderButton"
            HorizontalAlignment="Left"
            Margin="243,275,0,30" Width="216"
            Click="Add_Order_Button_Click" FontSize="36">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF4C93B3"/>
                    <GradientStop Color="#FF8A63B6" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button 
            Content="track your order"
            Name ="OrderTrackingButton"
            HorizontalAlignment="Left"
            Margin="492,275,0,30" Width="277"
            Click="Order_Tracking_Button_Click" FontSize="36">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF4C93B3"/>
                    <GradientStop Color="#FF8A63B6" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Label Content="ברוכים הבאים לחנות &#xD;&#xA;של משה ומענדי" Margin="0,7,294,0" VerticalAlignment="Top" Height="137" Width="800" FontSize="48" FontFamily="Georgia" Foreground="#FF101010" FontWeight="Bold" RenderTransformOrigin="0.499,0.797" HorizontalAlignment="Right" HorizontalContentAlignment="Right"/>

    </Grid>
</Window>

