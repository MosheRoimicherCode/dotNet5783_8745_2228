<Window x:Class="PL.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ProductWindow" Height="280" Width="400">
    <Grid>
        <Image HorizontalAlignment="Center" Stretch="Fill" VerticalAlignment="Center" Width="370" Source="/250px-770_Eastern_Parkway.jpg"/>


        <Button x:Name ="buttonProductWindows" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="-0.321,0.518" Height="20" Width="128"
                Click="Button_Click" Margin="248,199,0,0" Background="#FF0E6C09"
                >

            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.278"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox x:Name="ProducId" HorizontalAlignment="Center" Margin="0,37,0,0" TextWrapping="Wrap" Text="ProductID" VerticalAlignment="Top" Width="224" TextAlignment="Center" RenderTransformOrigin="0.492,-3.775" Background="#FFA2CACF"/>
        <TextBox x:Name="ProductName" HorizontalAlignment="Center" Margin="0,68,0,0" TextWrapping="Wrap" Text="ProductName" VerticalAlignment="Top" Width="224" TextAlignment="Center" RenderTransformOrigin="0.492,-3.775" Background="#FFA2CACF"/>
        <TextBox x:Name="ProductPrice" HorizontalAlignment="Center" Margin="0,99,0,0" TextWrapping="Wrap" Text="Product Price" VerticalAlignment="Top" Width="224" TextAlignment="Center" RenderTransformOrigin="0.492,-3.775" Background="#FFA2CACF"/>


        <TextBox x:Name="ProductInStock" HorizontalAlignment="Center" Margin="0,161,0,0" TextWrapping="Wrap" Text="Entities in stock" VerticalAlignment="Top" Width="224" TextAlignment="Center" RenderTransformOrigin="0.492,-3.775" Background="#FFA2CACF"/>
        <ComboBox HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" Width="224" Height="20" x:Name="Category2">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFA2CACF"/>
                    <GradientStop Color="#FFA2CACF" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <Label x:Name="Product_properties_" Content="Product_properties:" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFA2CACF" Height="22" Width="71" FontSize="8" FontStyle="Italic" Cursor="">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="23,199,0,0" VerticalAlignment="Top" Background="#FFB10D0D" Height="20" Width="128"/>
        <Label x:Name="Product_properties__Copy" Content="Product ID:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="19" Width="48" FontSize="8" FontStyle="Italic" Cursor="" Margin="40,36,0,0"/>
        <Label x:Name="Product_properties__Copy1" Content="Product Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="19" Width="65" FontSize="8" FontStyle="Italic" Cursor="" Margin="23,67,0,0"/>
        <Label x:Name="Product_properties__Copy2" Content="Product Price:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="19" Width="57" FontSize="8" FontStyle="Italic" Cursor="" Margin="31,98,0,0"/>
        <Label x:Name="Product_properties__Copy3" Content="Category:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="43" FontSize="8" FontStyle="Italic" Cursor="" Margin="45,130,0,0"/>
        <Label x:Name="Product_properties__Copy4" Content="In stock:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="38" FontSize="8" FontStyle="Italic" Cursor="" Margin="49,161,0,0"/>


    </Grid>
</Window>