<Window x:Class="PL.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ProductWindow" Height="280" Width="400">
    <Grid>
        <Image HorizontalAlignment="Center" Stretch="Fill" VerticalAlignment="Center" Width="370" Source="/250px-770_Eastern_Parkway.jpg"/>


        <Button x:Name ="buttonProductWindows" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="-0.321,0.518" Height="20" Width="128"
                Click="Button_Click" Margin="248,199,0,0" Background="#FF0E6C09" Tag="1"
                >

            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.278"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox x:Name="ProducId" HorizontalAlignment="Left" Margin="108,36,0,0" TextWrapping="Wrap" Text="ProductID" VerticalAlignment="Top" Width="224" TextAlignment="Center" RenderTransformOrigin="0.492,-3.775" Background="#FFA2CACF" ToolTip="Enter Id Product"/>
        <TextBox x:Name="ProductName" HorizontalAlignment="Left" Margin="108,66,0,0" TextWrapping="Wrap" Text="ProductName" VerticalAlignment="Top" Width="224" TextAlignment="Center" RenderTransformOrigin="0.492,-3.775" Background="#FFA2CACF" ToolTip="Enter the product name."/>
        <TextBox x:Name="ProductPrice" HorizontalAlignment="Left" Margin="105,99,0,0" TextWrapping="Wrap" Text="Product Price" VerticalAlignment="Top" Width="224" TextAlignment="Center" RenderTransformOrigin="0.492,-3.775" Background="#FFA2CACF" ToolTip="Enter the product price."/>


        <TextBox x:Name="ProductInStock" HorizontalAlignment="Left" Margin="108,163,0,0" TextWrapping="Wrap" Text="Entities in stock" VerticalAlignment="Top" Width="224" TextAlignment="Center" RenderTransformOrigin="0.492,-3.775" Background="#FFA2CACF" ToolTip="Enter how many entities of product have in stock."/>
        <ComboBox HorizontalAlignment="Left" Margin="108,130,0,0" VerticalAlignment="Top" Width="224" Height="20" x:Name="Category2" ToolTip="Chose a category.">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFA2CACF"/>
                    <GradientStop Color="#FFA2CACF" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <Label x:Name="Product_properties_" Content="Product_properties:" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFA2CACF" Height="22" Width="71" FontSize="8" FontStyle="Italic" Cursor="">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="63,199,0,0" VerticalAlignment="Top" Background="#FFB10D0D" Height="20" Width="128" Click="Cancel_Button_Click" Tag="2"/>
        <Label x:Name="Product_properties__Copy" Content="Product ID:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="31" Width="65" FontStyle="Italic" Cursor="" Margin="38,33,0,0" FontWeight="Bold" FontSize="10" RenderTransformOrigin="0.928,0.7"/>
        <Label x:Name="Product_properties__Copy1" Content="Product Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="88" FontSize="10" FontStyle="Italic" Cursor="" Margin="24,63,0,0" FontWeight="Bold"/>
        <Label x:Name="Product_properties__Copy2" Content="Product Price:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="74" FontSize="10" FontStyle="Italic" Cursor="" Margin="26,93,0,0" FontWeight="Bold"/>
        <Label x:Name="Product_properties__Copy3" Content="Category:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="31" Width="58" FontSize="10" FontStyle="Italic" Cursor="" Margin="45,126,0,0" FontWeight="Bold"/>
        <Label x:Name="Product_properties__Copy4" Content="In stock:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="38" Width="62" FontSize="10" FontStyle="Italic" Cursor="" Margin="50,159,0,0" FontWeight="Bold"/>


    </Grid>
</Window>