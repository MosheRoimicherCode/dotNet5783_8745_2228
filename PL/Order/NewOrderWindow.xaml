<Window x:Class="PL.NewOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="NewOrderWindow" Height="368" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency ="True"
        Background="Transparent"
        BorderThickness="0"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.Resources>
        <LinearGradientBrush x:Key="BackgroundButton">
            <GradientStop Color="Blue"/>
            <GradientStop Color="white" Offset="1"/>

        </LinearGradientBrush>
        <LinearGradientBrush x:Key="BackgroundButton2">
            <GradientStop Color="Blue"/>
            <GradientStop Color="AliceBlue" Offset="1"/>
        </LinearGradientBrush>


        <Style x:Key="myButtonStyle"
                TargetType="Button">
            <Setter Property="FontSize"
                    Value="15" />
            <Setter Property="FontFamily"
                    Value="Bold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                            CornerRadius="10"
                            Background="{StaticResource BackgroundButton}"
                            BorderThickness="1">
                            <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="{TemplateBinding Padding}" >
                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border CornerRadius="20"                    
            BorderThickness="1" Margin="0,0,1,0">
        <Border.Background>
            <ImageBrush ImageSource="/Order/z6.jpg" Stretch="Fill" Opacity="1"/>
        </Border.Background>
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Azure" Offset="0"/>

            </LinearGradientBrush>

        </Border.BorderBrush>


        <Grid Name ="MainGrid" Margin="0,1,0,16">


            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="39*"/>
                <ColumnDefinition Width="39*"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="174*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height = "27*"/>
                <RowDefinition Height="13*"/>
                <RowDefinition Height="70*"/>
                <RowDefinition Height="102*"/>
                <RowDefinition Height = "8.414"/>
                <RowDefinition Height="50.163"/>
                <RowDefinition Height="17.485"/>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="45*"/>
                <RowDefinition Height = "Auto"/>
            </Grid.RowDefinitions>
            <Ellipse Grid.Column="1" 
                     Grid.ColumnSpan="4" 
                     HorizontalAlignment="Left"
                     Height="123" Margin="13,17,0,0" 
                     Grid.RowSpan="4" Stroke="Black" 
                     VerticalAlignment="Top" Width="122" 
                     Fill="White"/>

            <Image HorizontalAlignment="Left" ToolTip="You don't have permission to insert you image." Height="181" Margin="13,-12,0,0" VerticalAlignment="Top" Width="190" Source="/Order/userTranparent2.png" Grid.ColumnSpan="4" Grid.RowSpan="4"/>


            <ComboBox ItemsSource="{x:Static local:ProductForListWindow.ListOfCategories}" SelectedItem="{Binding Category, Mode=TwoWay}"
                      SelectionChanged="CategorySelector_SelectionChanged"
                      Background="{DynamicResource BackgroundButton}" BorderBrush="{DynamicResource BackgroundButton}" Margin="0,3,13,58" Grid.Column="4" Grid.ColumnSpan="5" Grid.RowSpan="2" HorizontalAlignment="Right" Width="507" Grid.Row="1" />

            <ListView Name ="listOfProducts" ItemsSource= "{Binding products, Mode=TwoWay}" MouseDoubleClick="MouseDoubleClick" Margin="10,18,11,2" ToolTip="Double click to update a product properties" Grid.Column="4" Grid.RowSpan="7" Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="5" >
                <ListView.View>

                    <GridView x:Name="GridView">
                        <GridViewColumn DisplayMemberBinding= "{Binding Name}" 
                                Header="Product name" Width="150"/>
                        <GridViewColumn DisplayMemberBinding= "{Binding ID}" 
                                Header="Product ID" Width="120"/>
                        <GridViewColumn DisplayMemberBinding= "{Binding Price}" 
                                Header="Price" Width="120"/>
                        <GridViewColumn DisplayMemberBinding= "{Binding Category}" 
                                Header="Category" Width="150"/>
                        <GridViewColumn DisplayMemberBinding= "{Binding IsInStock}" 
                                Header="Is In Stock" Width="120"/>
                        <GridViewColumn DisplayMemberBinding= "{Binding AmontInCart}" 
                                Header="Amont In Cart" Width="120"/>

                    </GridView>
                </ListView.View>
            </ListView>
            <Button x:Name="cart_button" 
                Margin="20,43,19,0" 
                Click="cart_Button_Click" 
                ToolTip="Go to cart!" 
                BorderThickness="0" 
                Background="#FF8B8496"
                Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Height="59" VerticalAlignment="Top" Opacity="0.8">

                <Image HorizontalAlignment="Center" Height="69" VerticalAlignment="Center" Width="69" Source="/Order/cartImageTransparent.png" Stretch="Fill" Cursor="Hand" RenderTransformOrigin="0.526,0.523"/>
            </Button>

            <TextBox x:Name="User_name"
                     HorizontalAlignment="Left"
                     Grid.Row="5" TextWrapping="Wrap"
                     Text="User name" VerticalAlignment="Top" Width="156" Background="#FFE8D7D4" SelectionOpacity="0.2" Height="25" Grid.ColumnSpan="3" Margin="14,9,0,0" Grid.Column="1"/>
            <TextBox x:Name="User_email" HorizontalAlignment="Left"
                     Grid.Row="5" TextWrapping="Wrap" Text="User email" 
                     VerticalAlignment="Top" Width="158" Background="#FFE8D7D4" SelectionOpacity="0.2" Height="25" Grid.ColumnSpan="3" Margin="13,39,0,0" Grid.Column="1" Grid.RowSpan="2"/>
            <TextBox x:Name="User_adress" HorizontalAlignment="Left" Grid.Row="6"
                     TextWrapping="Wrap" Text="User address" VerticalAlignment="Top" Width="158" Background ="#FFE8D7D4" SelectionOpacity="0.2" Height="24" Grid.ColumnSpan="3" Margin="13,17,0,0" Grid.Column="1" Grid.RowSpan="3"/>

            <Button x:Name="btnMinimize"                           
                    BorderThickness="0"
                    Content="-"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Margin="15,3,21,2" 
                    Click="btnMinimize_Click" Grid.Column="7" Grid.ColumnSpan="2">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Blue"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#278BEF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Width="18" Height="18"
                                CornerRadius="9"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="btnExit"                           
                    BorderThickness="0"
                    Content="X"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Margin="1,0,-3,13" 
                    Click="btnExit_Click" Grid.Column="8" Grid.RowSpan="2" >
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Red"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#278BEF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Width="18" Height="18"
                                CornerRadius="9"
                                Background="{TemplateBinding Background}" Margin="-3,0,2,0">
                            <ContentPresenter VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>
