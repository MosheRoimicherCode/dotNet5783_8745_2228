<Window x:Class="PL.NewOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="NewOrderWindow" Height="450" Width="800">
    <Window.Resources>
        <LinearGradientBrush x:Key="BackgroundButton">
            <GradientStop Color="BlueViolet"/>
            <GradientStop Color="Orange" Offset="1"/>

        </LinearGradientBrush>


        <Style x:Key="myButtonStyle"
                TargetType="Button">
            <Setter Property="FontSize"
                    Value="15" />
            <Setter Property="FontFamily"
                    Value="Bold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                            CornerRadius="10"
                            Background="{StaticResource BackgroundButton}"
                            BorderThickness="1">
                            <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="{TemplateBinding Padding}" >
                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Name ="MainGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height = "70*"/>
            <RowDefinition Height = "500*"/>
            <RowDefinition Height = "Auto"/>
        </Grid.RowDefinitions>
        <Grid Name="UpGrid" Height="auto" Grid.Row="0" Width="auto" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions >
        </Grid>

        <Grid Name ="regularView" Grid.RowSpan="2" Height="NaN" Width="NaN" Background="#FFDBDFE2" Grid.ColumnSpan="2">
            <Rectangle HorizontalAlignment="Left" Height="434" Margin="2,0,0,0" Stroke="Black" VerticalAlignment="Center" Width="212" Fill="#FF333D4F"/>
            <Ellipse HorizontalAlignment="Left" Height="119" Margin="39,51,0,0" VerticalAlignment="Top" Width="135" Fill="#FFDBDFE2"/>
        </Grid>
        <ComboBox Name ="CategorySelector" SelectionChanged="CategorySelector_SelectionChanged" Background="{DynamicResource BackgroundButton}" BorderBrush="{DynamicResource BackgroundButton}" Margin="622,179,38,179" Grid.Row="1" Grid.ColumnSpan="2" />
        <Label Name ="CategorySelectorLabel" Content="Filter Category:" Grid.Column="0" FontSize="15" Margin="516,175,121,174" Grid.Row="1"/>


        <ListView Name ="ProductItemView" ItemsSource= "{Binding productItems}" MouseDoubleClick="MouseDoubleClick" Grid.ColumnSpan="2" Margin="276,214,37,14" ToolTip="Double click to update a product properties" BorderBrush="{DynamicResource BackgroundButton}" Grid.Row="1">
            <ListView.View>

                <GridView x:Name="GridView">
                    <GridViewColumn DisplayMemberBinding= "{Binding Name}" 
                                Header="Product name" Width="150"/>
                    <GridViewColumn DisplayMemberBinding= "{Binding ID}" 
                                Header="Product ID" Width="120"/>
                    <GridViewColumn DisplayMemberBinding= "{Binding Price}" 
                                Header="Price" Width="120"/>
                    <GridViewColumn DisplayMemberBinding= "{Binding Category}" 
                                Header="Category" Width="150"/>
                    <GridViewColumn DisplayMemberBinding= "{Binding IsInStock}" 
                                Header="Is In Stock" Width="120"/>
                    <GridViewColumn DisplayMemberBinding= "{Binding AmontInCart}" 
                                Header="Amont In Cart" Width="120"/>

                </GridView>
            </ListView.View>
        </ListView>

        <Button x:Name="ChangeView" 
                    Content="ChangeView" 
                    HorizontalAlignment="Left" 
                    Margin="10,5,0,17" 
                    Padding="5"
                    Click="Button_Click" Width="133"
                    Style="{StaticResource myButtonStyle}">

        </Button>

        <Button x:Name="cart_button" 
                    
                HorizontalAlignment="Left" 
                Margin="231,15,0,373" 
                Padding="5"
                Click="cart_Button_Click" 
                Width="62" 
                SnapsToDevicePixels="True" 
                Grid.RowSpan="2" 
                Cursor="Hand" 
                AutomationProperties.ItemType="Go to cart!" 
                AutomationProperties.Name="" 
                ClickMode="Press" Focusable="False"
                BorderThickness="0" MouseEnter="cart_button_MouseEnter"
                  
                >
            <Button.Background>
                <ImageBrush ImageSource="/Order/cartImageTransparent.png"/>
            </Button.Background>



        </Button>
        <TextBox x:Name="User_name" HorizontalAlignment="Left" Margin="24,235,0,0" Grid.Row="1" TextWrapping="Wrap" Text="User name" VerticalAlignment="Top" Width="166" Background="Transparent" SelectionOpacity="0.2" Height="28"/>
        <TextBox x:Name="User_email" HorizontalAlignment="Left" Margin="24,279,0,0" Grid.Row="1" TextWrapping="Wrap" Text="User email" VerticalAlignment="Top" Width="166" Background="Transparent" SelectionOpacity="0.2" Height="27"/>
        <TextBox x:Name="User_adress" HorizontalAlignment="Left" Margin="24,323,0,0" Grid.Row="1" TextWrapping="Wrap" Text="User address" VerticalAlignment="Top" Width="166" Background ="Transparent" SelectionOpacity="0.2" Height="28"/>
    </Grid>
</Window>
